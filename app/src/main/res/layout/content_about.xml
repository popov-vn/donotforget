<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.elsoftware.notificationreminder.ui.activity.HistoryActivity"
    tools:showIn="@layout/activity_about"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtAbout"
        android:padding="5pt"
        android:text="@string/about_text"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtAbout"
        android:id="@+id/txtOtherApps"
        android:padding="5pt"
        android:text="@string/about_other_apps"
        />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtOtherApps"
        android:id="@+id/aboutItems"
        android:overScrollMode="always"
        android:scrollbars="vertical"
        android:padding="5pt"
        />

</RelativeLayout>
